<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zass.finalproject.bmiCalculation_Activity">

    <TextView
        android:id="@+id/weight_textview_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weight"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal"
        android:layout_marginStart="42dp"
        android:layout_alignParentTop="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/height_edit_text"
        android:layout_marginTop="50dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="42dp" />


    <TextView
        android:id="@+id/height_textview_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal"
        android:layout_below="@+id/weight_textview_2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/height_edit_text"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/height_edit_text"
        android:layout_marginLeft="42dp" />


    <EditText
        android:id="@+id/weight_edit_text_2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:hint="kg"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="italic"
        android:inputType="number"
        android:textColorHint="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/weight_textview_2"
        android:layout_alignBottom="@+id/weight_textview_2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="42dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="42dp" />

    <EditText
        android:id="@+id/height_edit_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="m"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="italic"

        android:inputType="number"
        android:textColorHint="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/height_textview_2"
        android:layout_alignBottom="@+id/height_textview_2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/weight_edit_text_2"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/weight_edit_text_2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/weight_edit_text_2" />

    <Button
        android:id="@+id/calculate_bmi_button"
        android:layout_width="0dp"
        android:layout_height="48dp"

        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_shsape_round"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="calculate BMI"
        android:textSize="7pt"

        android:textAlignment="center"
        android:layout_below="@+id/height_edit_text"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/height_edit_text"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp" />

    <TextView
        android:id="@+id/result_bmi_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result of bmi"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/calculate_bmi_button"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
