<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0.1dp"
    android:paddingRight="0.1dp"
    android:background="@color/white"


    tools:context="com.example.zass.finalproject.SignUpSignIn_Activity">

    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/backdrop_fyp_4"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

     <Button
        android:id="@+id/button_sign_up"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:background="@drawable/btn_shsape_round"
        android:text="Sign up"
        android:backgroundTint="@color/colorPrimary"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="normal"

        android:textSize="7pt"

         android:layout_above="@+id/button_sign_in"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:background="@drawable/btn_shsape_round"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"

        android:text="Sign in"
        android:textAlignment="center"
        android:textSize="7pt"


        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_sign_up"
        android:layout_alignStart="@+id/button_sign_up" />

</RelativeLayout>
